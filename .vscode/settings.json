{
  // Setup Nuxt App
  "nuxt.isNuxtApp": true,

  // Enable the ESlint flat config support
  "eslint.experimental.useFlatConfig": true,

  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml"
  ]
}
