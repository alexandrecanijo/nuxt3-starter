{
  "name": "nuxt3-starter",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "Nuxt 3 Starter Template and boilerplate with lots of features and performance in mind. (Color mode, i18n, Accessibility, Pinia, etc)",
  "author": "AlexandreCanijo.com",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "outdated": "npx update-browserslist-db@latest --update-db && npx ncu",
    "updated": "npx ncu -u",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:css": "stylelint '**/*.{css,scss,sass,html,js,vue}' --ignore-path .gitignore",
    "lint:css:fix": "stylelint --fix '**/*.{css,scss,sass,html,js,vue}' --ignore-path .gitignore",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write --list-different .",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:prettier:fix && npm run lint:css:fix && npm run lint:js:fix"
  },
  "dependencies": {
    "nuxt": "^3.11.2",
    "vue": "^3.4.27",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@nuxt/eslint": "^0.3.10",
    "@stylistic/eslint-plugin": "^2.0.0",
    "eslint": "^8.57.0",
    "npm-check-updates": "^16.14.20",
    "postcss-html": "^1.7.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "stylelint": "^16.5.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "vite-plugin-eslint2": "^4.4.0"
  }
}
