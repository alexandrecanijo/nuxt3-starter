{
  "name": "nuxt3-starter",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "Nuxt 3 Starter Template and boilerplate with lots of features and performance in mind. (Color mode, i18n, Accessibility, Pinia, etc)",
  "author": "AlexandreCanijo.com",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "outdated": "npx update-browserslist-db@latest --update-db && npx ncu",
    "updated": "npx ncu -u",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:css": "stylelint '**/*.{css,scss,sass,html,js,vue}' --ignore-path .gitignore",
    "lint:css:fix": "stylelint --fix '**/*.{css,scss,sass,html,js,vue}' --ignore-path .gitignore",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write --list-different .",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:prettier:fix && npm run lint:css:fix && npm run lint:js:fix",
    "test": "npm run test:unit --run",
    "test:cov": "vitest --config ./vitest.config.js --coverage.enabled --run",
    "test:unit": "vitest --config ./vitest.config.js --run",
    "test:unit:watch": "vitest --config ./vitest.config.js --watch --coverage.enabled --update",
    "test:unit:cov": "vitest --config ./vitest.config.js --coverage.enabled",
    "test:unit:update": "vitest --config ./vitest.config.js --update --run"
  },
  "dependencies": {
    "vue": "^3.5.9",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@nuxt/eslint": "^0.5.0",
    "@nuxt/test-utils": "^3.14.1",
    "@stylistic/eslint-plugin": "^2.6.4",
    "@vitest/coverage-v8": "^2.0.5",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.9.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^14.12.3",
    "npm-check-updates": "^17.0.6",
    "nuxt": "^3.12.4",
    "playwright-core": "^1.46.1",
    "postcss-html": "^1.7.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "stylelint": "^16.8.2",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "unplugin-auto-import": "^0.18.2",
    "vite-plugin-eslint2": "^4.4.0",
    "vitest": "^2.0.5"
  }
}
